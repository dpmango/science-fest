mixin breadcrumbs(crumbs, modifier)
  // BREADCRUMBS
  .breadcrumbs(class=modifier ? "breadcrumbs--" + modifier : "")
    ul.breadcrumbs__list
      each crumb, index in crumbs
        li
          if (index !== crumbs.length - 1)
            a(href="#" itemprop="item")!= crumb
          else
            span!= crumb

